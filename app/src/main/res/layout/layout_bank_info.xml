<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="@string/bank_detail"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/HolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Account Holder Name"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtHolderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/AccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Account Number"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/BankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Bank Name"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBankName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/BranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Branch Name"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtBranchName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/IFSCCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="IFSC Code"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtIFSCCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/AddressProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Address Proof"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtAddressProof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/CancelCheque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|start"
                android:padding="5dp"
                android:text="Cancel Cheque"
                android:textColor="@color/aluminum"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCancelCheque"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/oil"
                android:textSize="12sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</merge>